import jieba
def stopWord(path):
    file = open(path, encoding='utf-8')
    stopWords = []
    for line in file:
        stopWords.append(line.split('\n')[0])
    file.close()
    return set(stopWords)

def delStopWords(words,stop_words_set):
#   words是已经切词但是没有去除停用词的文档。
#   返回的会是去除停用词后的文档
    result = jieba.cut(words)
    new_words = []
    for r in result:
        if r not in stop_words_set:
            new_words.append(r)
    return new_words

