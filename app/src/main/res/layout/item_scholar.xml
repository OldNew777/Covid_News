<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/scholar_list_card"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:layout_marginBottom="20dp"
    card_view:cardCornerRadius="4dp"
    android:padding="@dimen/activity_vertical_margin"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/scholar_list_name_zh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/scholar_list_name_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scholar_list_name_zh"
            android:gravity="start"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/scholar_list_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scholar_list_name_en"
            android:gravity="end"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/image_viewer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/scholar_list_position"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp">

        </ImageView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
