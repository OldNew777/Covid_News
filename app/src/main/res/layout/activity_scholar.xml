<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/news_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/scholar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_alignParentTop="true"

            android:textColor="#000000"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/scholar_name_zh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scholar_name"
            android:gravity="right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"

            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/image_viewer_sa"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_below="@+id/scholar_name_zh">

        </ImageView>
        <TextView
            android:id="@+id/passaway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_viewer_sa"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"

            android:textSize="12sp"/>

        <LinearLayout
            android:id="@+id/source_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passaway"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bio_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="40sp"
                />

            <TextView
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="1"

                android:textSize="20sp"/>

            <TextView
                android:id="@+id/edu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="40sp"
                />
            <TextView
                android:id="@+id/edu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="4"

                android:textSize="20sp"/>
            <TextView
                android:id="@+id/work_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="40sp"
                />
            <TextView
                android:id="@+id/work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="4"

                android:textSize="20sp"/>
            <TextView
                android:id="@+id/affiliation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="40sp"
                />
            <TextView
                android:id="@+id/affiliation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="4"

                android:textSize="20sp"/>
            <TextView
                android:id="@+id/homepage_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="40sp"
                />
            <TextView
                android:id="@+id/homepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="4"

                android:textSize="20sp"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>